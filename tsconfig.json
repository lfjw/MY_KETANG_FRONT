{
  "compilerOptions": {
    "target": "es5", // 编译的目标是es5
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true, // 允许在common.js模块和esmodule进行转换
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react", // 如何编译jsx语法
    "baseUrl": ".", // 查找飞相对路径的模块的起始位置
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src" // 只编译src目录下的ts文件
  ]
}
